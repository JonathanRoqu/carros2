        android:hint="Motor" />

    <EditText
        android:id="@+id/editTextChasis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chasis" />

    <EditText
        android:id="@+id/editTextVin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="VIN" />

    <EditText
        android:id="@+id/editTextCombustion"
